<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Blue-->
    <style name="LightTheme" parent="android:Theme.Holo.Light">
        <item name="android:colorBackground">@color/blue_200</item>
        <item name="android:colorBackgroundCacheHint">@color/teal_200</item>
        <item name="android:colorForeground">@color/white</item>
    </style>

    <!-- Black and White Theme-->
    <style name="DarkTheme" parent="android:Theme.Holo">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:colorBackgroundCacheHint">@color/orange</item>
        <item name="android:colorForeground">@color/white</item>
    </style>
</resources>